<h1>Update <%=@song.name%></h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

<label for="name">Name</label>
 <input type="text" name="song[name]" id="name" value="<%= @song.name %>"><br>

  <label>Artist Name:</label>

  <input type="text" name="artist[name]" value= "<%=@song.artist.name%>"><br><br>

  <label>Genre Name:</label>
  <% Genre.all.each do |genre| %>
  <input id="<%=genre.name%>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%></input>
<% end %>

<br></br>

<input type="submit" value="Save">
</form>
